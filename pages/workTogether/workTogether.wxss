/* pages/workTogether/workTogether.wxss */
page {
  background-color:rgb(66, 64, 64);
}

.workTogetherContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.opening {
  align-self: start;
  left: 0;
  padding: 20rpx;
  height: 120rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  color: whitesmoke;
  line-height: 1.8;
}

.invite {
  background-color: rgb(197, 235, 159);
  width: 90% !important;
  color: whitesmoke;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
}